        <Rectangle Grid.Column="0" Fill="#FF2029EC" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="stretch" Grid.ColumnSpan="11"/>
        <Rectangle Grid.Column="10" Fill="#FF2029EC" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.RowSpan="18" VerticalAlignment="Stretch"/>
        <Rectangle Grid.Column="0" Fill="#FF2029EC" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.RowSpan="18" VerticalAlignment="Stretch"/>
        <Rectangle Grid.Column="7" Fill="#FF2029EC" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Stretch"/>
        <Button x:Name="buttonENG" Grid.Column="4" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="16" VerticalAlignment="Stretch" IsHitTestVisible="True" Click="buttonENG_Click">
            <Button.Background>
                <ImageBrush ImageSource="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ae/Flag_of_the_United_Kingdom.svg/1280px-Flag_of_the_United_Kingdom.svg.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="buttonPOL" Grid.Column="6" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="16" VerticalAlignment="Stretch" IsHitTestVisible="True" Click="buttonPOL_Click">
            <Button.Background>
                <ImageBrush ImageSource="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e9/Flag_of_Poland_(normative).svg/250px-Flag_of_Poland_(normative).svg.png"/>
            </Button.Background>
        </Button>
