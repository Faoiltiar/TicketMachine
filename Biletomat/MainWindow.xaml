        <Label x:Name="label1" Content="Ilość biletów:" Grid.Column="8" HorizontalAlignment="Left" Margin="40,5,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="15" FontFamily="Lucida Sans Unicode"/>
        <Label x:Name="label2" Content="Kwota do zapłaty:" Grid.Column="8" HorizontalAlignment="Left" Margin="40,35,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="15" FontFamily="Lucida Sans Unicode"/>
        <Label x:Name="label3" Content="Bilety ZKM w Gdyni:" Grid.Column="2" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="20" FontFamily="Lucida Sans Unicode"/>
        <Label x:Name="label4" Content="Normalny" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="4" VerticalAlignment="Top" FontSize="14" FontFamily="Lucida Sans Unicode" FontWeight="Bold"/>
