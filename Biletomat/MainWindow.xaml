        <Button x:Name="button2AC" Content="1,90 zł" Grid.Column="6" HorizontalAlignment="Stretch" Margin="60,5,5,0" Grid.Row="10" VerticalAlignment="Stretch" BorderThickness="0" IsHitTestVisible="False" FontFamily="Lucida Sans Unicode" FontSize="16" Background="#FFF0F01A"/>
