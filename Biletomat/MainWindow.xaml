        <Button x:Name="button1C" Content="4,20 zł" Grid.Column="2" HorizontalAlignment="Stretch" Margin="200,0,0,5" Grid.Row="8" VerticalAlignment="Stretch" BorderThickness="0" IsHitTestVisible="False" FontFamily="Lucida Sans Unicode" FontSize="16" Background="#FFF0F01A"/>
