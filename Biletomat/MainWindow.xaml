            <RowDefinition Height="60*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="268*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="268*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="4" Grid.RowSpan="12" VerticalAlignment="stretch" Grid.ColumnSpan="1" Fill="#FFE1E6FF"/>
        <Rectangle Grid.Column="4" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="4" Grid.RowSpan="12" VerticalAlignment="stretch" Grid.ColumnSpan="3" Fill="#FFF9EEC6"/>
        <Rectangle Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="6" Grid.RowSpan="3" VerticalAlignment="stretch" Grid.ColumnSpan="5" Stroke="Black"/>
        <Rectangle Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="10" Grid.RowSpan="3" VerticalAlignment="stretch" Grid.ColumnSpan="5" Stroke="Black"/>
        <Rectangle Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="14" Grid.RowSpan="2" VerticalAlignment="stretch" Grid.ColumnSpan="5" Stroke="Black"/>

        <Button x:Name="button" Grid.Column="2" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="6" VerticalAlignment="Stretch" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button_Click">
            <TextBlock Name="tb1"  Text="Zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button1" Grid.Column="2" HorizontalAlignment="Left" Margin="5,0,0,5" Grid.Row="8" VerticalAlignment="Stretch" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button1_Click">
            <TextBlock Name ="tb2" Text="Nocny, pospieszny, specjalny i zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button2" Grid.Column="2" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="10" VerticalAlignment="Stretch" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button2_Click">
            <TextBlock Name="tb3" Text="Zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button3" Grid.Column="2" HorizontalAlignment="Left" Margin="5,0,0,5" Grid.Row="12" VerticalAlignment="Stretch" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button3_Click">
            <TextBlock Name="tb4" Text="Nocny, pospieszny, specjalny i zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button4" Grid.Column="2" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="14" VerticalAlignment="Stretch" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button4_Click">
            <TextBlock Name="tb5" Text="Nocny, pospieszny, specjalny i zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="buttonA" Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="buttonA_Click">
            <TextBlock Name ="tb1a" Text="Zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button1A" Grid.Column="4" HorizontalAlignment="Left" Margin="0,0,0,5" Grid.Row="8" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button1A_Click">
            <TextBlock Name ="tb2a" Text="Nocny, pospieszny, specjalny i zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button2A" Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="10" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button2A_Click">
            <TextBlock Name="tb3a" Text="Zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
        </Button>
        <Button x:Name="button3A" Grid.Column="4" HorizontalAlignment="Left" Margin="0,0,0,5" Grid.Row="12" VerticalAlignment="Stretch" Grid.ColumnSpan="3" Width="200" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="button3A_Click">
            <TextBlock Name="tb4a" Text="Nocny, pospieszny, specjalny i zwykły" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontFamily="Lucida Sans Unicode"/>
