        <Button x:Name="button1AA" Grid.Column="8" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="10" VerticalAlignment="Stretch" Grid.RowSpan="3" BorderThickness="0" IsHitTestVisible="True" FontFamily="Lucida Sans Unicode" Background="#FFF0F01A" Click="button1AA_Click">
            <TextBlock Name="tb7" Text="Bilety okresowe        (obsługa karty miejskiej)" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" FontFamily="Lucida Sans Unicode"/>
