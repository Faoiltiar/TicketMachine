        </Button>
        <Button x:Name="buttonAA" Grid.Column="8" Grid.Row="6" Grid.RowSpan="3" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" BorderThickness="0" IsHitTestVisible="True" Background="#FFF0F01A" Click="buttonAA_Click">
            <TextBlock Name="tb6" Text="Bilety jednorazowe metropolitalne MZKZG" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" FontFamily="Lucida Sans Unicode"/>
